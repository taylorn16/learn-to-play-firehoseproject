.row
  .small-12.columns
    %br
    %h2.text-center Learn Something Today
    %hr
    - @courses.each do |course|
      .media-object
        .media-object-section.top
          .thumbnail
            = image_tag course.course_photo.url(:thumb)
        .media-object-section
          %h4= link_to course.title, course_path(course)
          %p= course.description
          %p
            = link_to 'Enroll Now', course_path(course), :class => 'secondary button'
      %hr
